<section class="pt-section">
	<div class="form-group">
		<h1 class="form-title">Edit Profile</h1>

		<% if @er_messages.present?  %>
  		<div id="error_explanation">
    	<h2><%= @er_messages.count %>件のエラーがあります。</h2>

    	<ul>
    		<% @er_messages.each do |msg| %>
      		<li><%= msg %></li>
    		<% end %>
    	</ul>
  		</div>
		<% end %>

	  <h2 class="form-sub-title">アカウント名を変更</h2>
		<%= form_for @customer do |f| %>
			<%= f.hidden_field :id, :value => @customer.id %>
			<table class="layer1">
				<tbody>
					<tr>
						<td class="input-label">
							<%= f.label :name, 'ユーザー名' %>
						</td>
						<td class="input-body">
							<%= f.text_field :name, :placeholder => "山田 太郎" %>
						</td>
					</tr>
				</tbody>
				<tfoot>
					<tr>
						<td class="form-submit" colspan="2">
							<%= f.submit "SAVE" %>
						</td>
					</tr>
				</tfoot>
			</table>
		<% end %>

		<h2 class="form-sub-title">パスワードを変更</h2>
		<%= form_for @password, :url => {:action => 'update_passwd'}, html: {method: "patch"} do |f| %>
			<%= f.hidden_field :id, :value => @password.id %>
			<table class="layer1">
				<tbody>
					<tr>
						<td class="input-label">
							<%= f.label :old_password, 'Old password' %>
						</td>
						<td class="input-body">
							<%= f.password_field :old_password, :placeholder => "pass" %>
						</td>
					</tr>
					<tr>
						<td class="input-label">
							<%= f.label :password, 'New password' %>
						</td>
						<td class="input-body">
							<%= f.password_field :password, :placeholder => "pass" %>
						</td>
					</tr>
					<tr>
						<td class="input-label">
							<%= f.label :password_confirmation, 'Confirm new password' %>
						</td>
						<td class="input-body">
							<%= f.password_field :password_confirmation, :placeholder => "pass" %>
						</td>
					</tr>
				</tbody>
				<tfoot>
					<tr>
						<td class="form-submit" colspan="2">
							<%= f.submit "SAVE" %>
						</td>
					</tr>
				</tfoot>
			</table>
		<% end %>
	</div>
</section>